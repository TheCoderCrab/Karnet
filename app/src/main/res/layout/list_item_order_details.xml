<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_order_stock"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    tools:ignore="HardcodedText" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_order_details_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-name-"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/text_order_details_item_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-stock-"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_toStartOf="@id/text_order_details_item_orders"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/text_order_details_item_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-orders-"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_toStartOf="@id/text_order_details_item_sum"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/text_order_details_item_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-sum-"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:gravity="center"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>