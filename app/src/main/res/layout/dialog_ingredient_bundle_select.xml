<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="64dp"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_ingredient_bundle_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner_ingredient_bundle_fat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner_ingredient_bundle_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner_ingredient_bundle_taste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_ingredient_bundle_extras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_extra" />

</LinearLayout>